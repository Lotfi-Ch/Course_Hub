generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model student {
  student_id Int        @id @default(autoincrement())
  userName   String
  password   String
  education  String
  age        Int
  wallet     Int
  image      String
  email      String     @unique
  DM         DM[]
  review     review[]
  schedule   schedule[]
}

model teacher {
  teacher_id     Int           @id @default(autoincrement())
  email          String        @unique
  userName       String
  password       String
  education      String
  description    String
  age            Int
  wallet         Int
  image          String
  Availability   String
  Overall_rating String
  DM             DM[]
  free_course    free_course[]
  post           post[]
  review         review[]
  schedule       schedule[]
}

model post {
  post_id      Int     @id @default(autoincrement())
  author_id    Int    
  title        String
  body         String
  Image        String  @default("")
  status       String  @default("pending")
  author       teacher  @relation(fields: [author_id], references: [teacher_id])
}

model review {
  review_id           Int     @id @default(autoincrement())
  overallRating       Int
  ratesNumber         Int
  student_id             Int
  teacher_id          Int
  comments            String  @default("")
  student          student @relation(fields: [student_id], references: [student_id])
  teacher          teacher  @relation(fields: [teacher_id], references: [teacher_id])
}

model schedule {
  scheduel_id   Int     @id @default(autoincrement())
  student       Int
  teacher       Int
  appointment   String
  studentCallId Int     @unique
  student_id    student @relation(fields: [student], references: [student_id])
  teacher_id    teacher @relation(fields: [teacher], references: [teacher_id])
}

model attachement {
  attachement_id Int           @id @default(autoincrement())
  Type           String
  attachement    String
  body           String
  free_course    free_course[]
}

model free_course {
  freeCourse_id Int         @id @default(autoincrement())
  teacher       Int
  title         String
  category      String
  Status        String      @default("pending")
  document      Int
  image         String
  attachement   attachement @relation(fields: [document], references: [attachement_id])
  teacher_id    teacher     @relation(fields: [teacher], references: [teacher_id])
}

model DM {
  DM_id            Int     @id @default(autoincrement())
  student          Int
  teacher          Int
  teacher_messages String
  student_messages String
  student_id       student @relation(fields: [student], references: [student_id])
  teacher_id       teacher @relation(fields: [teacher], references: [teacher_id])
}
